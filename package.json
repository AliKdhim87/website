{
  "name": "@ali-dev/root",
  "private": true,
  "type": "module",
 "scripts": {
    "build": "turbo run build",
    "start": "next start",
    "dev": "turbo run dev",
    "watch": "turbo run watch",
    
    "lint": "turbo run lint --filter=./ && turbo run lint --parallel",
    "lint:eslint": "eslint . --cache \"**/*.{js,jsx,ts,tsx}\"",
    
    "lint-fix": "turbo run lint-fix --filter=./ && turbo run lint-fix --parallel",
    "lint-fix:eslint": "eslint . --cache --fix \"**/*.{js,jsx,ts,tsx}\"",
    "lint-fix:prettier": "prettier --write \"**/*.{js,ts,json}\"",

    "lint:all": "turbo run lint --parallel",
    "lint:eslint:all": "turbo run lint:eslint --parallel",
    
    "lint-fix:all": "turbo run lint-fix --parallel",
    "lint-fix:eslint:all": "turbo run lint-fix:eslint --parallel",
    "lint-fix:prettier:all": "turbo run lint-fix:prettier --parallel",

    "prepare": "husky install",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "playwright": "turbo run playwright",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.7",
    "@eslint/js": "9.22.0",
    "@next/eslint-plugin-next": "15.2.3",
    "@typescript-eslint/eslint-plugin": "8.27.0",
    "@typescript-eslint/parser": "8.27.0",
    "eslint": "9.22.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "15.2.3",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-storybook": "0.11.6",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.5.3",
    "sass": "1.77.4",
    "stylelint": "16.6.1",
    "stylelint-config-css-modules": "4.4.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-prettier-scss": "1.0.0",
    "stylelint-config-standard": "36.0.0",
    "stylelint-config-standard-scss": "13.1.0",
    "stylelint-scss": "6.3.1",
    "stylelint-selector-bem-pattern": "4.0.0",
    "turbo": "2.3.1",
    "typescript": "5.4.5",
    "typescript-eslint": "8.27.0"
  },
  "packageManager": "pnpm@9.9.0"
}
